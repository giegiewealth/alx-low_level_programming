CC := gcc
SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME := school
RM := /bin/rm
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean
	$(RM) -f $(NAME)

re: fclean all

